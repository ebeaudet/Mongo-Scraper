<div class="container">
  <div class="row">
    <div class="col-md-6">
      {{#if article}}

      {{#each article}}
      <span id="articleRow">
        <p>{{this.title}}</p>
        <a href={{this.link}}>
          <p>Link to original article</p>
        </a>
        <p>{{this.summary}}</p>
        <button type="button" id="commentButton" class="btn commentButton" data-id={{_id}}>Leave a Comment</button>
        {{!-- <button type="button" id="saveArticle" class="btn" data-id={{_id}}>Save this article</button> --}}
        <br>
        {{/each}}
      </span> 
      {{else}}
      <h3>There are no new articles. Please click on "Scrape" button.</h3>
      {{/if}}
    </div>
    <div id="commentDiv" class="col-md-6">
      {{#if comment}}
      {{#each comment}}
      <p>{{this.comment}}</p>
      {{/each}}
      {{/if}}
    </div>
  </div>
</div>

<div class="modal" id="commentModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Leave a Comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea class="form-control" id="comment"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary data-id={{this._id}}" id="saveButton">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script src="./js/app.js"></script>